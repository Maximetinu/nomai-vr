<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GameDir>C:\Program Files (x86)\Steam\steamapps\common\Outer Wilds</GameDir>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AssetsTools.NET" Version="2.0.9" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="BepInEx">
      <HintPath>$(GameDir)\BepInEx\core\BepInEx.dll</HintPath>
    </Reference>
  </ItemGroup>
  
  <Target Name="PostBuild" BeforeTargets="PostBuildEvent">
    <Exec Command='md "$(GameDir)\BepInEx\patchers\$(ModDir)"' IgnoreExitCode='true' />
    <Exec Command='copy /y "$(TargetPath)" "$(GameDir)\BepInEx\patchers\$(ModDir)"' />
    <Exec Command='copy /y "$(TargetDir)\AssetsTools.NET.dll" "$(GameDir)\BepInEx\patchers\$(ModDir)"' />
    <Exec Command='copy /y "$(TargetDir)\Mono*.dll" "$(GameDir)\BepInEx\patchers\$(ModDir)"' />
    <Exec Command='copy /y "$(ProjectDir)\ClassDatabase\*" "$(GameDir)\BepInEx\patchers\$(ModDir)"' />
  </Target>

  <ItemGroup>
    <Folder Include="ClassDatabase\" />
  </ItemGroup>

</Project>
